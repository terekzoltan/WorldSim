{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://worldsim.local/refinery-service-java/schema/patch-request-v1.schema.json",
  "title": "PatchRequest v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "requestId",
    "seed",
    "tick",
    "goal",
    "snapshot"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "const": "v1"
    },
    "requestId": {
      "type": "string",
      "minLength": 1
    },
    "seed": {
      "type": "integer"
    },
    "tick": {
      "type": "integer"
    },
    "goal": {
      "type": "string",
      "enum": [
        "TECH_TREE_PATCH",
        "WORLD_EVENT",
        "NPC_POLICY"
      ]
    },
    "snapshot": {
      "type": "object"
    },
    "constraints": {
      "type": "object"
    }
  }
}
